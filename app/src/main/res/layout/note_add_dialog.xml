<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <EditText
        android:id="@+id/note_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Title" />

    <EditText
        android:id="@+id/note_content_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Write Something..." />

    <EditText
        android:id="@+id/note_category_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="16dp"
        android:background="@android:color/transparent"

        android:ems="10"
        android:hint="Category" />

    <RadioGroup
        android:id="@+id/note_levels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/high_RB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/cream"
            android:text="High"/>

        <RadioButton
            android:id="@+id/medium_RB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/cream"

            android:text="Medium"/>
        <RadioButton
            android:id="@+id/low_RB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/cream"
            android:text="Low"/>
    </RadioGroup>

    <Button
        android:id="@+id/addNote_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Add"
        android:textAllCaps="false"
        android:backgroundTint="@color/navy"/>

</LinearLayout>